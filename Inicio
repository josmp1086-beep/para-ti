<script>
  let next = 'q2';
  const choices = {};
  window.pendingEmojis = null;

  function go(id){
    document.querySelectorAll('.screen').forEach(s=>s.classList.remove('active'));
    const target = document.getElementById(id);
    if(target) target.classList.add('active');

    if(id === 'response' && typeof window.pendingEmojis === 'string'){
      const em = window.pendingEmojis;
      window.pendingEmojis = null;
      spawnEmojis(em);
    }

    const music = document.getElementById('music');
    if(music && music.paused){
      music.volume = 0.4;
      music.play().catch(()=>{});
    }
  }

  function answer(msg, goNext, key, emojis){
    const poetic = getPoeticMessage(msg);
    document.getElementById('text').textContent = poetic;
    if(key) choices[key] = msg;
    next = goNext;
    window.pendingEmojis = emojis || 'ğŸ’«';
    go('response');
  }

  function getPoeticMessage(msg){
    if(msg.includes('Atardeceres')){
      return 'Hay algo especial en los atardeceresâ€¦ como si el mundo bajara la voz. Y sin importar la respuesta, serÃ­a bonito seguir compartiendo momentos asÃ­ contigo ğŸŒ‡';
    }
    if(msg.includes('CafÃ©s')){
      return 'Los cafÃ©s tranquilos tienen magia: conversaciones suaves, miradas sinceras y tiempo que no corre â˜•';
    }
    if(msg.includes('Sin plan')){
      return 'Perderse sin plan a veces es la forma mÃ¡s bonita de descubrir a alguien, poco a poco ğŸ—ºï¸';
    }
    if(msg.includes('Recuerdos')){
      return 'Hay momentos que se quedan para siempre, incluso cuando solo se viven con calma ğŸ“¸';
    }
    if(msg.includes('Primavera')){
      return 'La primavera siempre trae comienzos bonitos, incluso cuando no se planean ğŸŒ¸';
    }
    if(msg.includes('Verano')){
      return 'El verano huele a risas largas, luz dorada y momentos que se sienten libres â˜€ï¸';
    }
    if(msg.includes('OtoÃ±o')){
      return 'El otoÃ±o enseÃ±a que conocer a alguien tambiÃ©n puede ser un proceso sereno y bonito ğŸ‚';
    }
    if(msg.includes('Invierno')){
      return 'El invierno invita a acercarse, a compartir calor y silencios sinceros â„ï¸';
    }
    return 'Estar conocientote es lo mejor que paso este aÃ±o.ğŸ’';
  }

  function spawnEmojis(emojis){
    if(!emojis) return;
    const screen = document.querySelector('.screen.active') || document.body;
    for(let i=0;i<8;i++){
      const e = document.createElement('div');
      e.className = 'emoji';
      e.textContent = emojis;
      e.style.left = Math.random()*80 + 10 + '%';
      e.style.bottom = '20px';
      screen.appendChild(e);
      setTimeout(()=>e.remove(),1800);
    }
  }

  function finalAnswer(msg, emoji){
    choices['Final'] = msg;
    spawnEmojis(emoji);
  }

  function shareChoices(){
    let summary = 'Mis respuestas en el viaje âœˆï¸%0A%0A';
    Object.values(choices).forEach(v => summary += '- ' + v + '%0A');
    window.open('https://wa.me/?text=' + summary, '_blank');
  }
</script>
